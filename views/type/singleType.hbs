<h1>{{singleType.name}}</h1>

<div class="singleDiv">
    <p class="description">{{singleType.description}}</p>

    {{!-- <img src={{singleType.picture}} /> --}}

    <a href="/car/new/{{singleType._id}}">
        <button class="allBtns">
            Add Car
        </button>
    </a>
    <div class="smallContainer">
        {{#each typeCar}}
        <a href="/car/{{_id}}">{{make}} {{model}}</a>
        {{else}}
        <p class="emptyList">No Cars Available</p>
        {{/each}}
    </div>

    <a href="/event/new/{{singleType._id}}">
        <button class="allBtns">
            Add Event
        </button>
    </a>
    <div class="smallContainer">
        {{#each typeEvent}}
        <a href="/event/{{_id}}">{{name}}</a>
        {{else}}
        <p class="emptyList">No Events Available</p>
        {{/each}}
    </div>




    {{!-- <button class="allBtns"><a href="/type/edit/{{singleType._id}}">Update</a></button> --}}
    
    <form action="/type/{{singleType._id}}?_method=DELETE" method="POST" class="deleteForm">
        <input type="submit" value="Delete" class="deleteBtn"/>
    </form>


    <button class="homeBtn"><a href="/type">Back</a></button>

</div>